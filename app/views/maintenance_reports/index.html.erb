<h1>Listing maintenance_reports</h1>

<table>
  <thead>
    <tr>
      <th>Bike #</th>
      <th>Report on Bike</th>
      <th>Additional Repair Needed</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @maintenance_reports.each do |maintenance_report| %>
      <tr>
        <td><%= maintenance_report.bike_id %></td>
        <td><%= maintenance_report.report %></td>
        <td><%= maintenance_report.addtional_repair_need %></td>
        <td><%= link_to 'Edit', edit_maintenance_report_path(maintenance_report) %></td>
        <td><%= link_to 'Destroy', maintenance_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

