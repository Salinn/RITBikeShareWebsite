<style type="text/css">
section.rit{
    overflow: hidden;
    background-color:#131313; position: absolute; width: 100%; height:52px; display: block; z-index: 7;
    margin-left: 0;
    opacity:0.85;
    filter:alpha(opacity=85);
	-webkit-transition: opacity .75s ease-in-out,padding .75s ease-in-out;
    -moz-transition: opacity .75s ease-in-out,padding .75s ease-in-out;
    transition: opacity .75s ease-in-out,padding .75s ease-in-out;
}

section.rit-hidden {
	opacity:0.4;
    filter:alpha(opacity=40);
}

section.rit .inner{
    height:26px;
   margin:0 auto;padding:13px 0;width:940px;
    }
section.rit .inner .logo{float:left;width:345px}
section.rit .inner .logo img{padding:0;border:0}
section.rit .inner .meta{float:right;height:27px}
section.rit .inner .meta ul.links{float:left;margin:0}
section.rit .inner .meta ul.links li{float:left;list-style-type:none;margin:0}
section.rit .inner .meta ul.links li a{color:#FFF;float:left;font:normal 11px Arial,'Helvetica Neue',Helvetica,Arial,'Liberation Sans',FreeSans,sans-serif;padding:7px;text-decoration:none}
section.rit .inner .meta ul.links li a:hover{text-decoration:underline}
section.rit .inner .meta form{float:left;margin:3px 0 0 23px}
section.rit .inner .meta form div.infield label{color:#959595;font:normal 11px Arial,'Helvetica Neue',Helvetica,Arial,'Liberation Sans',FreeSans,sans-serif;left:6px;top:4px}section.rit .inner .meta form div.infield input{border:0;color:#131313;font:normal 11px Arial,'Helvetica Neue',Helvetica,Arial,'Liberation Sans',FreeSans,sans-serif;margin:0;padding:4px 5px;width:135px;-webkit-background-clip:padding-box;-webkit-border-radius:5px;-moz-background-clip:padding-box;-moz-border-radius:5px;border-radius:5px;background-clip:padding-box}
section.rit .inner .meta form div.infield a.submit{background:#fff url('/media/images/rit-search-bar-icon.gif?1442c35a0a97') center right no-repeat;display:block;height:13px;position:absolute;right:0;top:3px;width:16px}
section.page h1{color:#970000;font:bold 18px 'Helvetica Neue',Helvetica,Arial,'Liberation Sans',FreeSans,sans-serif;margin-bottom:20px}footer{background-color:#131313;clear:both;display:block}

.footer-item {
    opacity:1; filter:alpha(opacity=100);
    margin-top: 10px;
    height: 130px;
}
.sg-logo {
    background:url("img/sg_bw.png");
    width: 200px;
}
.sg-logo:hover{
    background:url("img/sg_color.png");
}

.login-holder p {
    font-size: 16px;
}
</style>

        </head>

        <body id="page-top" data-spy="scroll" data-target=".navbar-custom">

<!-- RIT Header + Navigation -->
<%= render 'layouts/header' %>


<%= yield %>
<!--<%= render 'layouts/footer' %>-->
<%= debug(params) if Rails.env.development? %>

