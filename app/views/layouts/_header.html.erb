<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <% if user_signed_in? && (current_user.admin || current_user.checkout_person ) %>
          <%= link_to "RIT Bike Share", home_check_out_path, id: "logo" %>
      <% elsif user_signed_in? %>
          <%= link_to "RIT Bike Share", user_home_path, id: "logo" %>
      <% else %>
          <%= link_to "RIT Bike Share", root_path, id: "logo" %>
      <% end %>
      <nav>
        <ul class="nav pull-right">
          <% if user_signed_in? && (current_user.admin || current_user.checkout_person )%>
              <li><%= link_to "Home",    home_check_out_path %></li>
          <% elsif user_signed_in? %>
              <li><%= link_to "Home",    user_home_path %></li>
          <% else %>
              <li><%= link_to "Home",    root_path %></li>
          <% end %>
          <li><%= link_to "FAQ",    help_path %></li>
          <% if user_signed_in? %>
              <% if current_user.registered %>
                  <li><%=  link_to "Account", current_user %></li>
              <% else %>
                  <li><%=  link_to "Register", register_path %></li>
              <% end %>
              <% if current_user.repairman %>
                  <li><%= link_to "Reports", reports_path %></li>
              <% end %>
              <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          <% else %>
              <li><%= link_to "Sign in", new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
